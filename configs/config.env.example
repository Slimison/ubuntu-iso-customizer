# Ubuntu ISO Customizer Configuration
# Copy this file to config.env and modify as needed

# ISO Settings
SOURCE_ISO_PATH="/path/to/ubuntu-22.04-desktop-amd64.iso"
OUTPUT_ISO_PATH="/path/to/custom-ubuntu.iso"
ISO_LABEL="Custom Ubuntu"
ISO_DESCRIPTION="Ubuntu with Development Tools"

# Post-Installation Settings
ENABLE_AUTOMATIC_UPDATES=true
INSTALL_DEVELOPMENT_TOOLS=true
INSTALL_MULTIMEDIA_TOOLS=false
CONFIGURE_FIREWALL=true
CONFIGURE_SSH=true

# User Settings
DEFAULT_USERNAME="developer"
SETUP_GIT_CONFIG=true
INSTALL_DOTFILES=true

# Development Tools
INSTALL_DOCKER=true
INSTALL_NODEJS=true
INSTALL_PYTHON_TOOLS=true
INSTALL_VSCODE=true
INSTALL_VIM_PLUGINS=true

# Multimedia Tools (if enabled)
INSTALL_MEDIA_CODECS=false
INSTALL_GRAPHICS_TOOLS=false
INSTALL_AUDIO_TOOLS=false

# Security Settings
UFW_DEFAULT_POLICY="deny"
SSH_PORT=22
DISABLE_ROOT_SSH=true
SSH_KEY_ONLY=false

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARN, ERROR
LOG_TO_FILE=true
LOG_FILE_PATH="/var/log/ubuntu-customizer.log"

# Advanced Settings
CLEANUP_TEMP_FILES=true
VERIFY_CHECKSUMS=true
PARALLEL_DOWNLOADS=true
CACHE_PACKAGES=true
