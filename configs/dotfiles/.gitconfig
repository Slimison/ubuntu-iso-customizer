# Git configuration template
[user]
    name = Your Name
    email = your.email@example.com
    
[core]
    editor = vim
    autocrlf = input
    filemode = false
    
[init]
    defaultBranch = main
    
[pull]
    rebase = false
    
[push]
    default = simple
    
[color]
    ui = auto
    
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
    
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
    
[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --all --decorate
    last = log -1 HEAD
    unstage = reset HEAD --
    visual = !gitk
